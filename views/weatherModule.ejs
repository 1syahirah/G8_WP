<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Weather Forecast - Eco Travel Planner</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-SgOJa3DmI69IUzQ2PVdRZhwQ+dy64/BUtbMJw1MZ8t5HZApcHrRKUc4W0kG879m7" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/style.css"> <!--css for generally-->
    <link rel="stylesheet" href="/css/weather.css">
    <link rel="stylesheet" href="/css/dashboard.css"> <!--css for dashboard-->
    <link rel="stylesheet" href="/css/profile.css">
</head>

<body>
    <!-- Main Side Bar -->
    <div class="mainHamburger" onclick="toggleSidebar()">☰</div>
    <div class="mainsidebar" id="mainsidebar">
        <a href="/profileManagement"><img src="/icons/accountIcon.png" alt="Profile" class="icon"> Profile</a>
        <a href="/"><img src="/icons/homeIcon.png" alt="Home" class="icon"> Home</a>
        <a href="/travelPlanner"><img src="/icons/travelIcon.png" alt="Travel Planner" class="icon"> Travel
            Planner</a>
        <a href="/weatherModule"><img src="/icons/sunWeatherIcon.png" alt="Weather" class="icon"> Weather</a>
        <a href="/carbonFootprint"><img src="/icons/calculatorIcon.png" alt="Calculator" class="icon"> Calculator</a>
        <a href="/login" onclick="return confirmLogout()"><img src="/icons/logout.png" alt="Logout"
                class="icon">Logout</a>
    </div>

    <div class="wrapper">
        <%- include('partials/header') %>

            <!--Navigation bar-->
            <nav class="dashboard-nav-bar">
                <a href="/">Home</a> |
                <a href="/vprofileManagement">Profile</a> |
                <a href="/login" onclick="return confirmLogout()">Logout</a>
            </nav>
            <div class="container">

                <div class="weather-data">

                    <!--current weather forecast-->
                    <div class="current-weather">
                        <div class="details">
                            <div class="location-text">
                                <h2 class="city-name">_______</h2>
                                <h2 class="date">______</h2>
                            </div>
                            <h6>Temperature : __°C</h6>
                            <h6>Wind : __ M/S</h6>
                            <h6>Humidity : __%</h6>
                        </div>
                    </div>

                    <div class="days-forecast">

                        <!--5 days weather forecast-->
                        <h4>5-Day Forecast</h4>

                        <ul class="weather-cards">

                            <li class="card">
                                <h3>( ______ )</h3>
                                <h6>Temp : __C</h6>
                                <h6>Wind : __ M/S</h6>
                                <h6>Humidity : __%</h6>
                            </li>

                            <li class="card">
                                <h3>( ______ )</h3>
                                <h6>Temp : __C</h6>
                                <h6>Wind : __ M/S</h6>
                                <h6>Humidity : __%</h6>
                            </li>

                            <li class="card">
                                <h3>( ______ )</h3>
                                <h6>Temp: __C</h6>
                                <h6>Wind: __ M/S</h6>
                                <h6>Humidity: __%</h6>
                            </li>

                            <li class="card">
                                <h3>( ______ )</h3>
                                <h6>Temp : __C</h6>
                                <h6>Wind : __ M/S</h6>
                                <h6>Humidity : __%</h6>
                            </li>

                            <li class="card">
                                <h3>( ______ )</h3>
                                <h6>Temp : __C</h6>
                                <h6>Wind : __ M/S</h6>
                                <h6>Humidity : __%</h6>
                            </li>
                        </ul>
                    </div>
                </div>

                <div class="weather-input">

                    <!--search bar-->
                    <h2>Enter a City Name</h2>
                    <input class="city-input" type="text" placeholder="Search City">
                    <button class="search-btn">Search</button>
                    <div class="separator"></div>
                    <button class="location-btn">Use Current Location</button>


                </div>

            </div>

            <script>
                function confirmLogout() {
                    return confirm("Are you sure you want to logout?")
                }
                function toggleSidebar() {
                    document.getElementById("mainsidebar").classList.toggle("open");
                }
            </script>

            <script defer
                src="https://static.cloudflareinsights.com/beacon.min.js/vcd15cbe7772f49c399c6a5babf22c1241717689176015"
                integrity="sha512-ZpsOmlRQV6y907TI0dKBHq9Md29nnaEIPlkf84rnaERnq6zvWvPUqr2ft8M1aS28oN72PdrCzSjY4U6VaAw1EQ=="
                data-cf-beacon='{"rayId":"93dbf461da54e58c","version":"2025.4.0-1-g37f21b1","r":1,"token":"e029c4a3c1704e88ab37ce2409fd73de","serverTiming":{"name":{"cfExtPri":true,"cfL4":true,"cfSpeedBrain":true,"cfCacheStatus":true}}}'
                crossorigin="anonymous"></script>
            <script src="/js/weather.js"></script>
</body>

<!--Footer for copyright-->
<%- include('partials/footer') %>

</html>